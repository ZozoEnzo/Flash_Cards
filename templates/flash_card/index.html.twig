{% extends 'base.html.twig' %}

{% block title %}Hello FlashCardController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/login.css') }}">
{% endblock %}
{% block body %}
    <div class="login-box">
        <h2>Connexion</h2>
        <form method="post">
            <div class="user-box">
                <input type="text" name="add_category[Titre]" id="add_category_Titre" autocomplete="username" required autofocus>
                <label>Titre</label>
            </div>
            <div class="user-box">
                <select name="add_category[Public]" id="add_category_Public" required>
                    <option value="false">Priazavé</option>
                    <option value="true">Publique</option>
                </select>
                <label>Visibilité</label>
            </div>
            <button type="submit">
                Ajouter
            </button>
        </form>
    </div>
{% endblock %}
