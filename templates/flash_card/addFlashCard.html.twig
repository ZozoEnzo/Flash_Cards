{% extends 'base.html.twig' %}

{% block title %}Nouvelle Cat√©gorie{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/login.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/addCategory.css') }}">
{% endblock %}
{% block body %}
  <div class="login-box">
    <h2>Ajouter une carte</h2>
    {{ form_start(form,{'attr': {'autocomplete': 'off','id': 'addCard'}}) }}
    <div class="user-box">
      {{ form_widget(form.Front) }}
      {{ form_label(form.Front) }}
    </div>
    <div class="user-box">
      {{ form_widget(form.Back) }}
      {{ form_label(form.Back) }}
    </div>
    {{ form_row(form.Type) }}
    {{ form_widget(form._token) }}

    <div class="row">
      <div class="col-6">
        <a href="{{ path('app_gestion') }}" class="btn-back">
          Retour
        </a>
      </div>
      <div class="col-6 right">
        <button type="submit">
          Ajouter
        </button>
      </div>
    </div>
    {{ form_end(form) }}
  </div>
{% endblock %}

