{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/login.css') }}">
{% endblock %}
{% block body %}
  <div class="login-box">
    <h2>Enregistrement</h2>
    {{ form_errors(form) }}
    {{ erreur }}
    <form name="register" method="post">
      <div id="register">
        <div class="user-box">
          {{ form_widget(form.uuid) }}
          {{ form_label(form.uuid) }}
        </div>
        <div class="user-box">
          {{ form_widget(form.plainPassword) }}
          {{ form_label(form.plainPassword) }}
        </div>
        <div>
          <button type="submit" id="register_save" name="register[save]">Enregistrer</button>
        </div>
        {{ form_widget(form._token) }}
      </div>
    </form>
  </div>
{% endblock %}
